{
  "manifest_version": 3,
  "name": "TabMan - Tab Manager",
  "version": "2.1.0",
  "description": "A powerful tab manager that lists, groups, and searches through your browser tabs",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "action": {
    "default_title": "TabMan - Manage your tabs"
  },
  "commands": {
    "toggle-tabman": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open TabMan"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 